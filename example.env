# Django Settings
# ==============
# SECURITY WARNING: Keep the secret key used in production secret!
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Database Configuration
# =======================
# Format: postgresql://user:password@host:port/database
# Example: postgresql://myuser:mypassword@localhost:5432/mydb
DATABASE_URL=postgresql://user:password@localhost:5432/passion4health

# S3 / MinIO Storage Configuration
# ==================================
# Set to 'True' to enable S3/MinIO storage, 'False' for local file storage
USE_S3_STORAGE=False

# AWS S3 Credentials (Required when USE_S3_STORAGE=True)
# For AWS S3:
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# For MinIO or S3-compatible storage (optional, leave empty for AWS S3):
# AWS_S3_ENDPOINT_URL=https://your-minio-endpoint.com
# AWS_S3_ADDRESSING_STYLE=path

# Custom Domain (optional)
# If you're using CloudFront or a custom domain for your S3 bucket:
# AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com

# S3 Storage Options
AWS_DEFAULT_ACL=public-read
AWS_S3_FILE_OVERWRITE=False
AWS_QUERYSTRING_AUTH=False
AWS_LOCATION=

# Notes:
# - For AWS S3: Only set AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY, AWS_STORAGE_BUCKET_NAME, and AWS_S3_REGION_NAME
# - For MinIO: Also set AWS_S3_ENDPOINT_URL and optionally AWS_S3_ADDRESSING_STYLE=path
# - AWS_DEFAULT_ACL: Set to 'private' if you want private files, 'public-read' for public files
# - AWS_S3_FILE_OVERWRITE: Set to 'True' if you want to overwrite files with the same name
# - AWS_QUERYSTRING_AUTH: Set to 'True' if you want signed URLs (for private files)
# - AWS_LOCATION: Optional prefix/path within the bucket (e.g., 'media/' or 'production/')
